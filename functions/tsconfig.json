{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "lib",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "types": ["node"],
    "skipLibCheck": true,                 // ✅ évite les erreurs dans node_modules
    "lib": ["ES2022", "ESNext", "esnext.disposable"]  // ✅ pour Disposable
  },
  "include": ["src"]
}
